<div class="page_heading">
  <h1>Listing people <%= link_to 'New Person', new_person_path, {:class => "btn btn-primary"}%></h1>

</div>


<table class="table table-stripped">
  <tr>
    <th>Bidder ID</th>
    <th>Full Name</th>
    <th>Email</th>
    <th>Phone number</th>
    <th></th>
  </tr>

<% @people.each do |person| %>
  <tr>
    <td><%= person.id %></td>
    <td><%= link_to "#{person.first_name} #{person.last_name}", person %></td>
    <td><%= person.email %></td>
    <td><%= person.phone_number %></td>
    <td>
      <%= link_to 'Show', person, {:class => "btn btn-mini btn-info"} %>
      <%= link_to 'Edit', edit_person_path(person), {:class => 'btn btn-mini btn-success'} %>
      <%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-mini btn-danger" %>
    </td>
  </tr>
<% end %>
</table>

<br />


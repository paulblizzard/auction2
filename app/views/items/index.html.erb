<h1>Listing items</h1>

<table class="table table-stripped">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Donor</th>
    <th>Winning bidder</th>
    <th>Minimum bid</th>
    <th>Winning bid</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.name %></td>
    <td><%= item.description %></td>
    <td><%= Person.find(item.donor_id.to_i).email %></td>
    <td><%= Person.find(item.winning_bidder_id.to_i).email if item.winning_bidder_id %></td>
    <td><%= number_to_currency item.minimum_bid %></td>
    <td><%= number_to_currency item.winning_bid %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>


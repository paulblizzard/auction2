<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @item.name %>
</p>

<p>
  <b>Description:</b>
  <%= @item.description %>
</p>

<p>
  <b>Donor:</b>
  <%= Person.find(@item.donor_id.to_i).email %>
</p>

<p>
  <b>Winning bidder:</b>
  <%= Person.find(@item.winning_bidder_id.to_i).email if @item.winning_bidder_id %>
</p>

<p>
  <b>Minimum bid:</b>
  <%= number_to_currency @item.minimum_bid %>
</p>

<p>
  <b>Winning bid:</b>
  <%= number_to_currency @item.winning_bid %>
</p>


